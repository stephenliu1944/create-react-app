{
    "include": ["src", "tests"],
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "Components/*": ["src/components/*"],
        "Config/*": ["src/config/*"],
        "Constants/*": ["src/constants/*"],
        "Enums/*": ["src/enums/*"],
        "Contexts/*": ["src/contexts/*"],
        "Fonts/*": ["src/fonts/*"],
        "Hooks/*": ["src/hooks/*"],
        "Images/*": ["src/images/*"],
        "Layouts/*": ["src/layouts/*"],
        "Pages/*": ["src/pages/*"],
        "Services/*": ["src/services/*"],
        "Styles/*": ["src/styles/*"],
        "Types/*": ["src/types/*"],
        "Utils/*": ["src/utils/*"],
        "Public/*": ["public/*"],
      },
      "strict": true, // 使用严格的类型检查
      "lib": ["dom", "dom.iterable", "esnext"], // 指定要使用的库文件
      "allowJs": true, // 允许使用 JavaScript 文件
      "allowSyntheticDefaultImports": true,
      "strictNullChecks": false, // 允许使用 null 和 undefined，默认为 false
      "skipLibCheck": true, // 忽略编译器的检查，默认为 false
      "esModuleInterop": true, // 允许在 ts 中 import commonjs 等 类型的模块，默认为 false
      "forceConsistentCasingInFileNames": true, // 强制文件名称与模块名称一致
      "moduleResolution": "node",
      "isolatedModules": true, // 允许单独的模块，默认为 false
      "noEmit": true, // 阻止 TS 生成代码, 由 babel 生成
      "jsx": "react-jsx", // 指定 JSX 语法，可选 react-jsx / react
      "suppressImplicitAnyIndexErrors": true, // 避免遍历对象的时候通过 key 获取对象的值提示错误
      "experimentalDecorators": true, // 允许使用 ES 装饰器，默认为 false
      "noImplicitAny": true
    }
  }